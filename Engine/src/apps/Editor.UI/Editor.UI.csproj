      <Compile Update="UI\Inspector\Components\FieldLabel.axaml.cs">
        <DependentUpon>FieldLabel.axaml</DependentUpon>
        <SubType>Code</SubType>
      </Compile>
      <Compile Update="UI\Inspector\Components\InspectorComponent.axaml.cs">
