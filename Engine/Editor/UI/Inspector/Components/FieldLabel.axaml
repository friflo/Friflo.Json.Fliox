<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="Friflo.Editor.UI.Inspector.FieldLabel"
             xmlns:local="clr-namespace:Friflo.Editor.UI.Inspector"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="30">

    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 1 2 0"
               DockPanel.Dock="Left"
               Text="{Binding $parent[local:FieldLabel].Text}"/>
</UserControl>